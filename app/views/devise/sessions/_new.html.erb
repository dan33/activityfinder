<h2>LOG IN</h2><br><br>

<%= simple_form_for(resource, :as => resource_name, :defaults => {:required => false}, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, :placeholder => 'Email', :required => true, :autofocus => true, :label => false, :type => "email" %>
    <%= f.input :password, :placeholder => 'Password', :required => true, :label => false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

