<h2>SIGN UP</h2><br><br>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :label => false, :placeholder => 'Name: '  %>
    <%= f.input :email, :required => true, :autofocus => true, :label => false, :placeholder => 'Email: ' %>
    <%= f.input :city, :required => true, :label => false, :placeholder => 'City: ' %>
    <%= f.input :image, :label => false %>
    <%= f.input :remote_image_url, :label => false %>
    <%= f.input :password, :required => true, :label => false, :placeholder => 'Password: '  %>
    <%= f.input :password_confirmation, :required => true, :label => false, :placeholder => 'Password Confirmation: ' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

