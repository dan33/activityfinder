<%= simple_form_for @comment do |f| %>
  <%= f.input :description, :required => true, :label => false, :as => :text, :input_html => { placeholder: "Comment", :rows => 3, :min => 10, :maxlength => 450} %>
  <%= f.input :activity_id, :as => :hidden, :input_html => { :value => @activity.id } %>
  <%= f.input :parent_id, :as => :hidden, :input_html => { :value => locals[:comment_parent].id }  %>
  <%= f.submit %>
<% end %>